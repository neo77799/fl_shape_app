{
  "name": "fl-shape-app",
  "private": true,
  "version": "0.0.0",
  "description": "Windows Electron app (Vite + React + TypeScript)",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "concurrently -k \"npm:dev:electron:build\" \"npm:dev:electron:run\"",
    "dev:electron:build": "tsup src/main/main.ts src/main/preload.ts --format cjs --sourcemap --out-dir dist-electron --clean --watch",
    "dev:electron:run": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 wait-on tcp:5173 dist-electron/main.js && node scripts/run-electron.cjs .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsup src/main/main.ts src/main/preload.ts --format cjs --sourcemap --out-dir dist-electron --clean",
    "start": "node scripts/run-electron.cjs ."
  },
  "dependencies": {
    "electron": "^35.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "wait-on": "^8.0.0"
  }
}
